@model AddTodoViewModel

@{
    ViewData["Title"] = "AddTodoViewModel";
}

<h2>AddTodoViewModel</h2>

<form asp-action="add">
    <div class="form-horizontal">
        <h4>TodoController</h4>
        <hr />
        
        
    </div>
</form>

<form asp-action="AddItem">
    
    <div asp-validation-summary="ModelOnly" class="text-danger">
        <div class="form-group">
            <Text>Dodaj Todo poruku:</Text>
           
            <input asp-for="TodoInput" class="form-control" />
            <span asp-validation-for="TodoInput" class="text-danger"></span>
            <input name=btnDodaj type="submit" value="Dodaj" class="btn btn-default" />

        </div>
    </div>
</form>


<div>
    <a asp-action="Index">Back to Active todos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
